{
  "name": "@carbonplan/layouts",
  "version": "1.0.0-develop.9",
  "description": "page layout components",
  "main": "dst/layouts.js",
  "module": "dst/layouts.module.js",
  "umd:main": "dst/layouts.umd.js",
  "source": "src/index.js",
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:core": "rimraf dst && microbundle build --jsx React.createElement --jsxFragment React.Fragment",
    "build:blog": "rimraf blog/dst && microbundle build --cwd blog --jsx React.createElement --jsxFragment React.Fragment",
    "build:docs": "rimraf docs/dst && microbundle build --cwd docs --jsx React.createElement --jsxFragment React.Fragment"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carbonplan/layouts.git"
  },
  "author": "freeman-lab",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carbonplan/layouts/issues"
  },
  "files": [
    "blog/dst",
    "docs/dst",
    "dst",
    "README.md",
    "package.json"
  ],
  "homepage": "https://github.com/carbonplan/layouts#readme",
  "exports": {
    ".": {
      "require": "./dst/layouts.js",
      "default": "./dst/layouts.modern.js"
    },
    "./blog": {
      "require": "./blog/dst/layouts-blog.js",
      "default": "./blog/dst/layouts-blog.modern.js"
    },
    "./docs": {
      "require": "./docs/dst/layouts-docs.js",
      "default": "./docs/dst/layouts-docs.modern.js"
    }
  },
  "peerDependencies": {
    "react": "^16.14.0 || ^17.0.2",
    "react-dom": "^16.14.0 || ^17.0.2",
    "theme-ui": ">=0.11.0"
  },
  "devDependencies": {
    "microbundle": "^0.14.0",
    "prettier": "2.2.1",
    "rimraf": "2.6.3",
    "npm-run-all": "^4.0.0"
  }
}
